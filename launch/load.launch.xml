<launch>
    <arg name="sim" default="true"/>
    <arg name="viz" default="false"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher" name="robot_state_publisher" output="screen">
        <param name="robot_description" value="$(command 'xacro $(find-pkg-share br_description)/urdf/budget_roomba.urdf.xacro sim:=$(var sim)')"/>
    </node>
    <!-- <node pkg="rviz2" exec="rviz2" name="rviz2" args="-d $(find-pkg-share br_description)/rviz/urdf.rviz"/> -->
    <group if="$(var viz)">
        <node pkg="rviz2" exec="rviz2" name="rviz2">
            <param name="use_sim_time" value="$(var sim)"/>
        </node>
    </group>

</launch>